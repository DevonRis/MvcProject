@using SkillsShowcase.Shared.Domain.Models.Enums
@model SkillsShowcaseMVC.Models.ContinentalRegistrationModel


@{
    ViewData["Title"] = "Continental Registration";
}

<style>
    form {
        max-width: 800px;
        margin: 40px auto;
        padding: 30px;
        background: #ffffff;
        border: 1px solid #e6e6e6;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 20px;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

        form > h2 {
            grid-column: 1 / -1;
            text-align: center;
            color: #007bff;
            margin-bottom: 20px;
        }

        /* Style each field container */
        form > div {
            display: flex;
            flex-direction: column;
        }

        /* Label styling */
        form label {
            margin-bottom: 5px;
            font-weight: 600;
            color: #333333;
        }

        /* Input and select styling */
        form input[type="text"],
        form input[type="date"],
        form select {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 14px;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            /* Focus and hover state for inputs and selects */
            form input[type="text"]:focus,
            form input[type="date"]:focus,
            form select:focus,
            form input[type="text"]:hover,
            form input[type="date"]:hover,
            form select:hover {
                outline: none;
                border-color: #66afe9;
                box-shadow: 0 0 5px rgba(102, 175, 233, 0.5);
            }

        /* Submit button styling: spans both columns */
        form > button {
            grid-column: 1 / -1;
            padding: 12px 20px;
            background: #007bff;
            color: #fff;
            border: none;
            border-radius: 4px;
            font-size: 16px;
            cursor: pointer;
            transition: background 0.3s ease, transform 0.3s ease;
            margin-top: 10px;
        }

            form > button:hover {
                background: #0056b3;
                transform: scale(1.05);
            }

    /* Responsive layout for smaller screens */
    media (max-width: 600px) 
    {
        form
    {
        grid-template-columns: 1fr;
    }

    }
</style>

@using (Html.BeginForm("CreateAssassinSubmission", "Assassins", FormMethod.Post))
{
    <div>
        <label for="FirstName">First Name</label>
        <input type="text" id="FirstName" name="FirstName" value="@Model.FirstName" />
    </div>
    <div>
        <label for="LastName">Last Name</label>
        <input type="text" id="LastName" name="LastName" value="@Model.LastName" />
    </div>
    <div>
        <label for="Age">Age</label>
        <select id="Age" name="Age">
            @foreach (var age in Enum.GetValues(typeof(ContinentalAgeRange)))
            {
                <option value="@age">@age</option>
            }
        </select>
    </div>
    <div>
        <label for="Height">Height</label>
        <input type="text" id="Height" name="Height" value="@Model.Height" />
    </div>
    <div>
        <label for="RegisterDate">Register Date</label>
        <input type="date" id="RegisterDate" name="RegisterDate" value="@Model.RegisterDate?.ToString("yyyy-MM-dd")" />
    </div>
    <div>
        <label for="State">State</label>
        <select id="State" name="State">
            @foreach (var state in Enum.GetValues(typeof(AllFiftyStates)))
            {
                <option value="@state">@state</option>
            }
        </select>
    </div>
    <div>
        <label for="PerferedMartialArt">Preferred Martial Art</label>
        <select id="PerferedMartialArt" name="PerferedMartialArt">
            @foreach (var martialArt in Enum.GetValues(typeof(MartialArts)))
            {
                <option value="@martialArt">@martialArt</option>
            }
        </select>
    </div>
    <div>
        <label for="PerferedWeapon">Preferred Weapon</label>
        <select id="PerferedWeapon" name="PerferedWeapon">
            @foreach (var weapon in Enum.GetValues(typeof(Weapons)))
            {
                <option value="@weapon">@weapon</option>
            }
        </select>
    </div>
    <button type="submit">Submit</button>
}