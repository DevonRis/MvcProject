@model SkillsShowcaseMVC.Models.GuitarManufacturerDetailsViewModel

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<style>
    body {
        font-family: Arial, sans-serif;
    }

    h2 {
        text-align: center;
        font-weight: bold;
        color: #222;
        margin-bottom: 15px;
        text-transform: uppercase;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
        line-height: 1.6;
        font-size: 16px;
        margin-top: 10px;
    }

    table, th, td {
        border: 1px solid #ddd;
    }

    th, td {
        padding: 12px;
        text-align: left;
    }

        td span {
            display: inline-block;
            margin-left: 10px;
            font-weight: bold;
            color: #555;
        }

    tbody tr:first-child td:first-child {
        border-top-left-radius: 10px;
    }

    tbody tr:first-child td:last-child {
        border-top-right-radius: 10px;
    }

    tbody tr:last-child td:first-child {
        border-bottom-left-radius: 10px;
    }

    tbody tr:last-child td:last-child {
        border-bottom-right-radius: 10px;
    }

    th {
        background-color: #444;
        color: #fff;
        padding: 12px;
        text-align: center;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    tr:last-child td:first-child {
        border-bottom-left-radius: 8px;
    }

    tr:last-child td:last-child {
        border-bottom-right-radius: 8px;
    }

    tr:nth-child(even) {
        background-color: #f5f5f5;
    }

    tr:nth-child(odd) {
        background-color: white;
    }

    section #nonIteratedSection {
        background-color: #d6d6d6;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    #nonIteratedSection {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        #nonIteratedSection td {
            padding: 10px 0;
            padding-left: 7px;
            margin-left: 9px;
        }

        #nonIteratedSection span {
            font-weight: bold;
            margin-left: 3px;
            color: #555;
        }

    section #iteratedSection {
        background-color: #d6d6d6;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    #iteratedSection {
        margin-top: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        #iteratedSection table {
            margin-top: 20px;
        }
    /*Accodion Styling*/
    .accordion-item {
        background-color: #fff;
        border: 1px solid #ddd;
        border-radius: 8px;
        margin-bottom: 10px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .accordion-header {
        background-color: #f8f9fa;
        border-bottom: 1px solid #ddd;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
        padding: 10px;
    }

    .accordion-button {
        background-color: #f8f9fa;
        color: #333;
        font-weight: bold;
        border: none;
        outline: none;
        box-shadow: none;
        padding: 10px;
        border-radius: 8px;
    }

        .accordion-button:not(.collapsed) {
            background-color: #e9ecef;
            color: #000;
        }

    .accordion-body {
        padding: 20px;
        background-color: #fff;
        border-bottom-left-radius: 8px;
        border-bottom-right-radius: 8px;
    }
</style>
@if (Model != null)
{
    <div id="guitarManufacturerDetailsContainer">
        <div class="accordion" id="accordionExample">
            <div class="accordion-item">
                <h4 class="accordion-header">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Guitar Manufacturer Details
                    </button>
                </h4>
                <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <section id="nonIteratedSection">
                            <h2 style="text-align: center; font-weight: bold; color: #333;">Current Details</h2>
                            <table style="width: 100%; border-collapse: collapse; line-height: 1.6; font-size: 16px;">
                                <tbody>
                                    <tr>
                                        <td>
                                            Manufacturer Id:
                                            <span id="manufacturerId">
                                                @if (Model.GuitarManufacturerId > 0)
                                                {
                                                    @Html.DisplayFor(model => model.GuitarManufacturerId)
                                                }
                                                else
                                                {
                                                    <span style="color: red;">GuitarManufacturerId not found</span>
                                                }
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Manufacturer Name:
                                            <span id="manufacturerName">
                                                @if (Model.ManufacturerName != null)
                                                {
                                                    @Html.DisplayFor(model => model.ManufacturerName)
                                                }
                                                else
                                                {
                                                    <span style="color: red;">Manufacturer Name not found</span>
                                                }
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Location:
                                            <span id="location">
                                                @if (Model.Location != null)
                                                {
                                                    @Html.DisplayFor(model => model.Location)
                                                }
                                                else
                                                {
                                                    <span style="color: red;">Location not found</span>
                                                }
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Contact Number:
                                            <span id="contact">
                                                @if (Model.ContactNumber != null)
                                                {
                                                    @Html.DisplayFor(model => model.ContactNumber)
                                                }
                                                else
                                                {
                                                    <span style="color: red;">Contact Number not found</span>
                                                }
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Email:
                                            <span id="email">
                                                @if (Model.Email != null)
                                                {
                                                    @Html.DisplayFor(model => model.Email)
                                                }
                                                else
                                                {
                                                    <span style="color: red;">Email not found</span>
                                                }
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Website:
                                            <span id="website">
                                                @if (Model.Website != null)
                                                {
                                                    @Html.DisplayFor(model => model.Website)
                                                }
                                                else
                                                {
                                                    <span style="color: red;">Website not found</span>
                                                }
                                            </span>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            Date Established:
                                            <span id="date">
                                                @if (Model.DateEstablished != null)
                                                {
                                                    @Html.DisplayFor(model => model.DateEstablished)
                                                }
                                                else
                                                {
                                                    <span style="color: red;">DateEstablished not found</span>
                                                }
                                            </span>
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p>Nothing to Display.</p>
}